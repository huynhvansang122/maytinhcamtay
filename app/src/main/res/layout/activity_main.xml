<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5E5455"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:background="#76736A"
        android:textColor="@color/black"
        ></EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="5"
        android:orientation="horizontal"
        >
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:textSize="15dp"
        android:textColor="@color/white"
        android:backgroundTint="#968D92"
            android:layout_margin="5dp"
        android:layout_weight="1"
        >

    </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MRC"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:backgroundTint="#968D92"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M-"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:backgroundTint="#968D92"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="M+"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:backgroundTint="#968D92"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:backgroundTint="#5E5455"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="5"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="%"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#968D92"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="√"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#968D92"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MC"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#968D92"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MR"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#968D92"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="÷"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:backgroundTint="#968D92"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="5"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="±"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:backgroundTint="#968D92"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="7"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:backgroundTint="#E8E8FD"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="8"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:backgroundTint="#E8E8FD"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="9"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:backgroundTint="#E8E8FD"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="X"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:backgroundTint="#968D92"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:weightSum="5"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="♭"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:backgroundTint="#968D92"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="4"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:backgroundTint="#E8E8FD"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="5"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:backgroundTint="#E8E8FD"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="6"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:textColor="@color/black"
            android:backgroundTint="#E8E8FD"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="-"
            android:layout_gravity="center"
            android:textSize="30dp"
            android:textColor="@color/white"
            android:backgroundTint="#968D92"
            android:layout_margin="5dp"
            android:layout_weight="1"
            >

        </Button>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:weightSum="5"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:weightSum="2"
            android:orientation="vertical"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="4"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="CE"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#F8C161"
                    android:layout_weight="1"
                    >

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#E8E8FD"
                    android:layout_weight="1"
                    >

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#E8E8FD"
                    android:layout_weight="1"
                    >

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#E8E8FD"
                    android:layout_weight="1"
                    >

                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:weightSum="4"
                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="ON/C"
                    android:layout_gravity="center"
                    android:textSize="10dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#F8C161"
                    android:layout_weight="1"
                    >

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#E8E8FD"
                    android:layout_weight="1"
                    >

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="."
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#E8E8FD"
                    android:layout_weight="1"
                    >

                </Button>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="="
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/black"
                    android:backgroundTint="#E8E8FD"
                    android:layout_weight="1"
                    >

                </Button>


            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="+"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:textColor="@color/white"
                android:layout_margin="5dp"
                android:backgroundTint="#968D92"
                android:layout_weight="1"
                >

            </Button>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>